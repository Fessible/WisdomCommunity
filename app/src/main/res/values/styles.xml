<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Design.Admin.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/palette_quaternary_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_text_box_selector</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Design.EditView" parent="@android:style/Widget.EditText">
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:minHeight">106dp</item>
        <item name="android:maxLength">100</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/color_bbb</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ResetPassword.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/palette_quaternary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Design.Admin.Login.Confirm.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Widget.Support.Platform.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Widget.Design.Admin.Toolbar.Title" parent="TextAppearance.Widget.Support.Platform.Toolbar.Title">
        <item name="android:maxWidth">180dp</item>
        <item name="android:textColor">@color/palette_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/palette_primary_color</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="MyTextView" >
        <item name="android:textColor">@color/palette_primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Design.Admin.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>//背景变暗
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/Widget.Design.Admin.BottomSheet.Modal</item>//对话框透明
        <item name="selectableItemBackground">@color/palette_transparent</item>
    </style>

    <style name="Widget.Design.Admin.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/palette_transparent</item>
    </style>
</resources>
