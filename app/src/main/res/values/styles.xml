<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/Widget.Design.Edu.ToolBar</item>
        <item name="alertDialogTheme">@style/Alert</item>
        <item name="alertDialogStyle">@style/AlertDialogStyle</item>
    </style>


    <style name="Alert">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.Design.ProgressBar.Large" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/icon_box_load_ring_spinner</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:maxWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:maxHeight">70dp</item>
    </style>

    <style name="AlertDialogStyle">
        <item name="android:layout">@layout/dialog_altert_layout</item>
    </style>

    <style name="Widget.Design.Admin.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/palette_quaternary_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_text_box_selector</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Design.EditView" parent="@android:style/Widget.EditText">
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">top</item>
        <item name="android:minHeight">106dp</item>
        <item name="android:maxLength">100</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/color_bbb</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ResetPassword.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/palette_primary_text_color</item>
        <item name="android:textColorHint">@color/palette_quaternary_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Design.Admin.Login.Confirm.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/btn_login_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Design.Confirm.TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Design.Alert" parent="ThemeOverlay.Design.Admin.Dialog.Alert">
        <item name="alertDialogStyle">@style/AlertDialog.Design</item>
    </style>

    <style name="ThemeOverlay.Design.Admin.Dialog.Alert" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowBackground">@drawable/bg_bullet_box_compat</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="AlertDialog.Design" parent="AlertDialog.AppCompat.Light" >
        <item name="android:layout">@layout/alert_dialog_layout</item>
    </style>

    <style name="TextAppearance.Widget.Support.Platform.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Widget.Design.Admin.Toolbar.Title" parent="TextAppearance.Widget.Support.Platform.Toolbar.Title">
        <item name="android:maxWidth">180dp</item>
        <item name="android:textColor">@color/palette_white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/palette_primary_color</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="MyTextView">
        <item name="android:textColor">@color/palette_primary_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">54dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.Design.Admin.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>//背景变暗
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>//去除边框
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="bottomSheetStyle">@style/Widget.Design.Admin.BottomSheet.Modal</item>//对话框透明
        <item name="selectableItemBackground">@color/palette_transparent</item>
    </style>

    <style name="Widget.Design.Admin.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/palette_transparent</item>
    </style>

    <style name="Widget.Design.Edu.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="navigationIcon">@drawable/selector_btn_back</item>
        <item name="actionMenuTextColor">@color/palette_white</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Design.Edu.Toolbar.Title
        </item>
        <item name="buttonGravity">bottom</item>
    </style>

    <style name="TextAppearance.Widget.Design.Edu.Toolbar.Title" parent="TextAppearance.Widget.Support.Platform.Toolbar.Title">
        <item name="android:textColor">@color/palette_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxWidth">120dp</item>
    </style>
</resources>
